                <section class="input-select">
                    <label>Selecciona la marca:</label>
                    <select class="dropdown-createProduct" name="brand" required> <!-- este name es lo que pasa al back-->
                        <% let marcas = ['Brooks Brothers', 'Colantuono', 'Devré', 'Ermenegildo Zegna', 'Hermes', 'Luigi de Carlo']; %> 
                        <% for( const marca of marcas) { %>
                            <option value="<%= marca %>"> <%= marca %> </option>                        
                        <% } %>
                    </select>
                </section>
                <section class="input-select">
                    <label>Selecciona la categoría:</label>
                    <select class="dropdown-createProduct" name="category" required> <!-- este name es lo que pasa al back-->
                        <% let categorias = ['Ambos', 'Pantalones', 'Camisas', 'Sacos', 'Zapatos', 'Corbatas']; %> 
                        <% for( const categoria of categorias) { %>
                            <option value="<%= categoria %>"> <%= categoria %> </option>                        
                        <% } %>
                    </select>
                </section>

                <div class="file-select-createProduct" id="picture" >
                    <input type="file" name="image" id="pictureUpload" aria-label="Fotos del producto">
                </div>

                <section>
                    <button type="submit">Crear</button>
                    <button type="reset">Borrar datos</button>
                </section>
            </form>
        </main>
        <%- include('../partials/footer.ejs') %>
    </body>
</html>