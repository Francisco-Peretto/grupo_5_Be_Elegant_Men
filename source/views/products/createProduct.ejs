<%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        <%- include('../partials/navBrands.ejs') %>
        <main class="main-create-product">
            <section class="cuerpo-register-createProduct">
                <h1>Registro de producto</h1>
                <form class="formulario-register-createProduct" action="/products/save" method="post" enctype="multipart/form-data">
                    <section>
                        <input type="text" id="name" name="name" placeholder="Nombre del producto" required>
                        <input type="number" id="price" name="price" placeholder="Precio del producto" required>
                    </section>
                    
                    <section>
                        <input type="text" id="detail" name="detail" placeholder="Descripción del producto" required></input>
                    </section>

                <section class="input-select">
                    <label>Selecciona la marca:</label>
                    <select class="dropdown-createProduct" name="brand" required>
                        <% for( const brand of brands) { %>
                            <option value="<%= brand.id %>"> <%= brand.name %> </option>                        
                        <% } %>
                    </select>
                </section>

                        </select>
                    </section>
                    <section class="input-select">
                        <label>Selecciona la categoría:</label>
                        <select class="dropdown-createProduct" name="category" required> <!-- este name es lo que pasa al back-->
                            <% for( const category of categories) { %>
                                <option value="<%= category.id %>"> <%= category.name %> </option>
                            <% } %>              
                        </select>
                    </section>
    

                    <div class="file-select-createProduct" id="picture" >
                        <input type="file" name="image" id="pictureUpload" aria-label="Fotos del producto">
                    </div>

                    <section>
                        <button type="submit">Crear</button>
                        <button type="reset">Borrar datos</button>
                    </section>
                </form>
            </section>
        </main>
        <%- include('../partials/footer.ejs') %>
    </body>
</html>